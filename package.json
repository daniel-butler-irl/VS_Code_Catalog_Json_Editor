{
  "name": "ibm-catalog-json-editor",
  "displayName": "IBM Catalog JSON Editor",
  "description": "VS Code extension for managing IBM Cloud catalog JSON files",
  "version": "0.7.31",
  "publisher": "DanielButler",
  "preview": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/daniel-butler-irl/VS_Code_Catalog_Json_Editor"
  },
  "icon": "media/catalog-icon.png",
  "engines": {
    "vscode": "^1.87.0"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/ibm_catalog.json",
    "onView:ibmCatalogTree",
    "onView:ibmCatalogPreRelease",
    "onCommand:ibmCatalog.login",
    "onCommand:ibmCatalog.loginGithub",
    "onCommand:ibmCatalog.openPreReleasePanel",
    "onCommand:ibmCatalog.createPreRelease"
  ],
  "contributes": {
    "configuration": {
      "title": "IBM Catalog",
      "properties": {
        "ibmCatalog.enableDebugLogging": {
          "type": "boolean",
          "default": true,
          "description": "Enable debug level logging for the IBM Catalog extension"
        },
        "ibmCatalog.validation.rules": {
          "type": "object",
          "default": {
            "install_type_required": {
              "enabled": false,
              "params": {
                "ignoreValidation": true
              }
            }
          },
          "description": "Configuration for validation rules",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean",
                "description": "Whether the rule is enabled"
              },
              "params": {
                "type": "object",
                "description": "Additional parameters for the rule",
                "properties": {
                  "ignoreValidation": {
                    "type": "boolean",
                    "description": "Whether to ignore schema validation for this rule"
                  }
                }
              }
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "ibmCatalog.clearCache",
        "title": "Clear Cache",
        "category": "IBM Catalog",
        "icon": "$(trash)"
      },
      {
        "command": "ibmCatalog.login",
        "title": "Login to IBM Cloud",
        "category": "IBM Catalog",
        "icon": "$(sign-in)"
      },
      {
        "command": "ibmCatalog.addSchemaIgnorePattern",
        "title": "Add Schema Validation Ignore Pattern",
        "category": "IBM Catalog (Developer)",
        "icon": "$(exclude)"
      },
      {
        "command": "ibmCatalog.viewSchemaIgnorePatterns",
        "title": "View Schema Validation Ignore Patterns",
        "category": "IBM Catalog (Developer)",
        "icon": "$(list-filter)"
      },
      {
        "command": "ibmCatalog.logout",
        "title": "Logout from IBM Cloud",
        "category": "IBM Catalog",
        "icon": "$(sign-out)"
      },
      {
        "command": "ibmCatalog.loginGithub",
        "title": "Login to GitHub",
        "category": "IBM Catalog",
        "icon": "$(sign-in)"
      },
      {
        "command": "ibmCatalog.logoutGithub",
        "title": "Logout from GitHub",
        "category": "IBM Catalog",
        "icon": "$(sign-out)"
      },
      {
        "command": "ibmCatalog.showLogs",
        "title": "Show IBM Catalog Logs",
        "category": "IBM Catalog"
      },
      {
        "command": "ibmCatalog.refresh",
        "title": "Refresh IBM Catalog View",
        "icon": "$(refresh)"
      },
      {
        "command": "ibmCatalog.addElement",
        "title": "Add Element",
        "icon": "$(add)"
      },
      {
        "command": "ibmCatalog.selectElement",
        "title": "Select Element"
      },
      {
        "command": "ibmCatalog.editElement",
        "title": "Edit Element",
        "icon": "$(edit)"
      },
      {
        "command": "ibmCatalog.locateCatalogFile",
        "title": "Locate IBM Catalog File",
        "icon": "$(file-add)"
      },
      {
        "command": "ibmCatalog.createCatalogFile",
        "title": "Create ibm_catalog.json",
        "category": "IBM Catalog",
        "icon": "$(new-file)"
      },
      {
        "command": "ibmCatalog.openPreReleasePanel",
        "title": "Open Pre-release Panel",
        "category": "IBM Catalog"
      },
      {
        "command": "ibmCatalog.createPreRelease",
        "title": "Create Pre-release",
        "category": "IBM Catalog"
      },
      {
        "command": "ibmCatalog.showPreReleaseLogs",
        "title": "Show Pre-release Logs",
        "category": "IBM Catalog"
      },
      {
        "command": "ibmCatalog.setLogLevel",
        "title": "Set Log Level",
        "category": "IBM Cloud Catalog"
      },
      {
        "command": "ibmCatalog.deleteElement",
        "title": "Delete Element",
        "category": "IBM Catalog",
        "icon": "$(trash)"
      },
      {
        "command": "ibmCatalog.viewSchemaValidationIgnorePatterns",
        "title": "View Schema Validation Ignore Patterns",
        "category": "IBM Catalog (Developer)",
        "icon": "$(list-filter)"
      },
      {
        "command": "ibmCatalog.addSchemaValidationIgnorePattern",
        "title": "Add Schema Validation Ignore Pattern",
        "category": "IBM Catalog (Developer)",
        "icon": "$(add)"
      },
      {
        "command": "ibmCatalog.viewIgnoredValidationErrors",
        "title": "View Ignored Validation Errors",
        "category": "IBM Catalog (Developer)",
        "icon": "$(warning)"
      },
      {
        "command": "catalog-json-editor.refreshSchema",
        "title": "IBM Catalog: Refresh JSON Schema"
      },
      {
        "command": "catalog-json-editor.validateSchema",
        "title": "IBM Catalog: Validate Current Document"
      },
      {
        "command": "catalog-json-editor.showValidationPatterns",
        "title": "IBM Catalog: Show Validation Pattern Summary"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ibm-catalog-explorer",
          "title": "IBM Catalog Explorer",
          "icon": "$(json)"
        }
      ]
    },
    "views": {
      "ibm-catalog-explorer": [
        {
          "id": "ibmCatalogTree",
          "name": "Catalog Structure",
          "icon": "$(json)",
          "contextualTitle": "IBM Catalog JSON"
        },
        {
          "id": "ibmCatalogPreRelease",
          "name": "Pre-release",
          "type": "webview",
          "visibility": "collapsed"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "ibmCatalogTree",
        "contents": "$(sync~spin) Loading IBM Catalog...\n\nPlease wait while we initialize the catalog view.",
        "when": "!ibmCatalog.hasWorkspace"
      },
      {
        "view": "ibmCatalogTree",
        "contents": "Create IBM Catalog JSON\n\nNo IBM Catalog JSON file found in your workspace.\n\n[Create IBM Catalog JSON](command:ibmCatalog.createCatalogFile)",
        "when": "ibmCatalog.hasWorkspace && !ibmCatalog.catalogFileExists"
      },
      {
        "view": "ibmCatalogPreRelease",
        "contents": "$(sync~spin) Loading Pre-Release Manager...\n\nPlease wait while we initialize the pre-release functionality.",
        "when": "!ibmCatalog.hasWorkspace"
      },
      {
        "view": "ibmCatalogPreRelease",
        "contents": "No IBM Catalog JSON file found in your workspace.\n\nPre-release functionality is only available when an IBM Catalog JSON file exists.",
        "when": "ibmCatalog.hasWorkspace && !ibmCatalog.catalogFileExists"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ibmCatalog.login",
          "when": "view == ibmCatalogTree && !ibmCatalog.isLoggedIn",
          "group": "navigation@1",
          "icon": "$(sign-in)"
        },
        {
          "command": "ibmCatalog.logout",
          "when": "view == ibmCatalogTree && ibmCatalog.isLoggedIn",
          "group": "navigation@1",
          "icon": "$(sign-out)"
        },
        {
          "command": "ibmCatalog.clearCache",
          "when": "view == ibmCatalogTree",
          "group": "navigation@3",
          "icon": "$(trash)"
        },
        {
          "command": "ibmCatalog.loginGithub",
          "when": "view == ibmCatalogPreRelease && !ibmCatalog.isGithubLoggedIn",
          "group": "navigation@1"
        },
        {
          "command": "ibmCatalog.logoutGithub",
          "when": "view == ibmCatalogPreRelease && ibmCatalog.isGithubLoggedIn",
          "group": "navigation@1"
        },
        {
          "command": "ibmCatalog.clearCache",
          "when": "view == ibmCatalogPreRelease",
          "group": "navigation@3",
          "icon": "$(trash)"
        }
      ],
      "view/item/context": [
        {
          "command": "ibmCatalog.addElement",
          "when": "view == ibmCatalogTree && (viewItem == container || viewItem == array)",
          "group": "inline"
        },
        {
          "command": "ibmCatalog.deleteElement",
          "when": "view == ibmCatalogTree && viewItem != 'root'",
          "group": "1_modification"
        }
      ]
    },
    "colors": [
      {
        "id": "ibmCatalog.stringColor",
        "description": "Color for string values",
        "defaults": {
          "dark": "#da9465",
          "light": "#bf5024",
          "highContrast": "#FF8C00"
        }
      },
      {
        "id": "ibmCatalog.numberColor",
        "description": "Color for number values",
        "defaults": {
          "dark": "#B5B6F8",
          "light": "#1E4ACB",
          "highContrast": "#8A2BE2"
        }
      },
      {
        "id": "ibmCatalog.booleanColor",
        "description": "Color for boolean values",
        "defaults": {
          "dark": "#D7BA7D",
          "light": "#b2b50d",
          "highContrast": "#D7BA7D"
        }
      },
      {
        "id": "ibmCatalog.objectColor",
        "description": "Color for object values",
        "defaults": {
          "dark": "#C586C0",
          "light": "#6A0080",
          "highContrast": "#C586C0"
        }
      },
      {
        "id": "ibmCatalog.arrayColor",
        "description": "Color for array values",
        "defaults": {
          "dark": "#569CD6",
          "light": "#1D4D7A",
          "highContrast": "#569CD6"
        }
      },
      {
        "id": "ibmCatalog.nullColor",
        "description": "Color for null/undefined values",
        "defaults": {
          "dark": "#575859",
          "light": "#2c3136",
          "highContrast": "#868f97"
        }
      },
      {
        "id": "ibmCatalog.enumColor",
        "description": "Color for symbol/enum values",
        "defaults": {
          "dark": "#B5CEA8",
          "light": "#31806c",
          "highContrast": "#B5CEA8"
        }
      },
      {
        "id": "ibmCatalog.ValidationSuccess",
        "description": "Color for validation success",
        "defaults": {
          "dark": "#007700",
          "light": "#0E6300",
          "highContrast": "#00FF00"
        }
      },
      {
        "id": "ibmCatalog.ValidationFail",
        "description": "Color for validation failure",
        "defaults": {
          "dark": "#FF0000",
          "light": "#B50000",
          "highContrast": "#FF0000"
        }
      },
      {
        "id": "ibmCatalog.catalogIdColor",
        "description": "Color for catalog id",
        "defaults": {
          "dark": "#007ACC",
          "light": "#007ACC",
          "highContrast": "#007ACC"
        }
      },
      {
        "id": "ibmCatalog.offeringIdColor",
        "description": "Color for offering id",
        "defaults": {
          "dark": "#007ACC",
          "light": "#007ACC",
          "highContrast": "#007ACC"
        }
      },
      {
        "id": "ibmCatalog.flavorColor",
        "description": "Color for flavor",
        "defaults": {
          "dark": "#007ACC",
          "light": "#007ACC",
          "highContrast": "#007ACC"
        }
      },
      {
        "id": "ibmCatalog.versionColor",
        "description": "Color for version",
        "defaults": {
          "dark": "#007ACC",
          "light": "#007ACC",
          "highContrast": "#007ACC"
        }
      }
    ],
    "keybindings": [
      {
        "command": "ibmCatalog.triggerEdit",
        "key": "space",
        "when": "focusedView == ibmCatalogTree && !inputFocus"
      },
      {
        "command": "ibmCatalog.triggerEdit",
        "key": "enter",
        "when": "focusedView == ibmCatalogTree && !inputFocus"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./tsconfig.json",
    "compile:tests": "tsc -p ./src/test/tsconfig.test.json",
    "watch": "tsc -watch -p ./tsconfig.json",
    "pretest": "npm run compile && npm run compile:tests",
    "lint": "eslint . --config eslint.config.mjs",
    "test": "node --force-node-api-uncaught-exceptions-policy=true --unhandled-rejections=strict ./out/test/runTest.js",
    "vscode:prepublish": "npm run clean && node esbuild.mjs --production",
    "esbuild-base": "node esbuild.mjs",
    "esbuild": "node esbuild.mjs",
    "esbuild:test": "node esbuild.mjs --test",
    "esbuild:watch": "node esbuild.mjs --watch",
    "esbuild:test:watch": "node esbuild.mjs --test --watch",
    "package": "npm run esbuild && vsce package",
    "publish": "npm run esbuild && vsce publish",
    "clean": "rimraf dist out",
    "prebuild": "npm run clean",
    "build": "npm run esbuild",
    "build:test": "npm run esbuild:test",
    "dev": "npm run esbuild:watch",
    "start:vscode": "npm run build && code --disable-extensions --extensionDevelopmentPath=${PWD} --user-data-dir=${PWD}/.vscode-test/user-data ${PWD}",
    "start:vscode:watch": "concurrently \"npm run esbuild:watch\" \"code --disable-extensions --extensionDevelopmentPath=${PWD} --user-data-dir=${PWD}/.vscode-test/user-data ${PWD}\""
  },
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/lodash": "^4.17.12",
    "@types/mocha": "^10.0.9",
    "@types/node": "^18.19.75",
    "@types/node-fetch": "^2.6.12",
    "@types/semver": "^7.5.8",
    "@types/sinon": "^17.0.3",
    "@types/source-map-support": "^0.5.10",
    "@types/tar": "^6.1.13",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.2",
    "chai": "^5.1.2",
    "concurrently": "^8.2.2",
    "esbuild": "^0.25.0",
    "eslint": "^8.54.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^21.1.2",
    "lodash": "^4.17.21",
    "mocha": "^10.8.2",
    "mocha-junit-reporter": "^2.2.1",
    "rimraf": "^5.0.10",
    "semver": "^7.6.3",
    "sinon": "^19.0.2",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@ibm-cloud/platform-services": "^0.67.0",
    "@octokit/core": "^5.0.2",
    "@octokit/plugin-rest-endpoint-methods": "^10.2.0",
    "@octokit/rest": "^20.0.2",
    "@types/tar-stream": "^3.1.3",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "gunzip-stream": "^1.0.1",
    "ibm-cloud-sdk-core": "^5.1.0",
    "jsonc-parser": "^3.3.1",
    "node-fetch": "^2.7.0",
    "semver": "^7.5.4",
    "tar": "^7.4.3",
    "tar-stream": "^3.1.7"
  }
}
