{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true /* Skip type checking of declaration files to avoid lru-cache issues */
  },
  "exclude": ["node_modules", ".vscode-test"],
  "include": ["src"]
}